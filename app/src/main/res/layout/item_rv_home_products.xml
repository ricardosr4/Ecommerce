<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_recycler_product"
        android:layout_width="89dp"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_recycler_roduct"
            android:layout_width="65dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/imageview"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_example_2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_recycler_product"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        tools:text="short_verano"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_recycler_product" />

    <TextView
        android:id="@+id/tv_recycler_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_semi_bold"
        tools:text="$12.000"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_recycler_product" />

</androidx.constraintlayout.widget.ConstraintLayout>